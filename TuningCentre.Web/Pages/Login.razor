@page "/login"
@inherits LoginBase

<div class="img_2">

    <img src="/Images/BannerIMG/banner_mercedes.jpg" width="100%" height="100%">

</div>

<div class="row2">
    <div class="chin">
        <h3 style="text-align: center; color: papayawhip; margin-top: 150px; margin-bottom: 100px; font-size: 50px">Авторизація</h3>
        <hr class="featurette-divider">

        <EditForm Model="@LoginData" OnValidSubmit="LoginAsync">
            <DataAnnotationsValidator/>
            <ValidationSummary/>
            <label style="color: papayawhip"; for="username">Ім'я користувача</label>
            <InputText id="username" @bind-Value="LoginData.UserName" class="form-control"/>
            <label style="color: papayawhip"; for="password">Пароль</label>
            <InputText id="password" @bind-Value="LoginData.Password" class="form-control" />       
            <p class="my-4">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </p>
        </EditForm>
    </div>
</div>

